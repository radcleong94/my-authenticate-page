<div class="row mt-4">
  <div class="col-md-6 ml-5">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
      <%- include ("./partials/errormessages") %>
      <form action="/login" method="POST" style="margin-left:auto;">
        <div class="form-group">
          <label style="color:black;padding-left:5px;font-weight:bold;" for="username"><i class="fas fa-user"></i> Username</label>
          <input
            type="username"
            id="username"
            name="username"
            class="form-control"
            placeholder="John wich"
          />
        </div>
        <div class="form-group">
          <label style="color:black;padding-left:5px;font-weight:bold;" for="password"><i class="fas fa-unlock-alt"></i> Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/register">Register</a>
      </p>
    </div>
  </div>
</div>


